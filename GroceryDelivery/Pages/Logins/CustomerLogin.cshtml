@page
@model CustomerLoginModel
@{
    ViewData["Title"] = "Customer Login";
}

<h1>@ViewData["Title"]</h1>

<form class="post">
    <div class="form-group">
        <select asp-for="Customer.CustomerID" class="form-control" asp-items="ViewBag.CustomerID">
            <option value="">Which customer are you?</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign-In" class="btn btn-primary" asp-page="/Order/Index">
    </div>
</form>